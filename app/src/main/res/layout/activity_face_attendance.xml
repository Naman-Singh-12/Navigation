<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FaceAttendance.Activity.FaceAttendanceActivity">

    <LinearLayout
        android:id="@+id/ll_facecamera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_faceattendanceback"
        android:layout_marginBottom="@dimen/d_20dp"
        android:background="#DFDCDC"
        android:orientation="vertical" />

    <Button
        android:id="@+id/bt_faceattendanceback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:layout_marginHorizontal="@dimen/d_80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/d_20dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_flip_camera"
        android:layout_above="@+id/bt_faceattendanceback"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/d_30dp"
        android:layout_marginRight="@dimen/d_30dp"
        />

</RelativeLayout>